<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="application_style">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="profile_item">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="profile_item_field">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="profile_field_name" parent="profile_item_field">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="profile_field_age" parent="profile_field_name">
        <item name="android:gravity">end</item>
    </style>

    <style name="profile_field_registered" parent="profile_item_field">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">start</item>
    </style>

</resources>
